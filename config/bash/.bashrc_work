# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
        . /etc/bashrc
fi
# Define a few colors
BLACK='\001\e[0;30m\002'
BLUE='\001\e[0;34m\002'
GREEN='\001\e[0;32m\002'
CYAN='\001\e[0;36m\002'
RED='\001\e[0;31m\002'
PURPLE='\001\e[0;35m\002'
BROWN='\001\e[0;33m\002'
LIGHTGRAY='\001\e[0;37m\002'
DARKGRAY='\001\e[1;30m\002'
LIGHTBLUE='\001\e[1;34m\002'
LIGHTGREEN='\001\e[1;32m\002'
LIGHTCYAN='\001\e[1;36m\002'
LIGHTRED='\001\e[1;31m\002'
LIGHTPURPLE='\001\e[0;35m\002'
YELLOW='\001\e[1;33m\002'
WHITE='\001\e[1;37m\002'
RESET='\001\e[0m\002'

# Uncomment the following line if you don't like systemctl's auto-paging feature:
export SYSTEMD_PAGER=
export HOSTNAME
# User specific aliases and functions

# This file is read by interactive non-login shells.

# I have my .profile calling .bashrc, but this might cause problems for
# non-interactive shells. Just return if this shell is non-interactive.
#export DOCKER_HOST=unix:///disk01/var/run/docker.sock


[[ $- == *i* ]] || return
export PATH=/opt/tbs/bin:/opt/svil/bin:$PATH
export PATH=$PATH:/home/e416232/nvim-linux64/bin
export PATH=$PATH:/home/e416232/kubectl
export PATH=$PATH:/home/e416232/openshift
export PATH=$PATH:/home/e416232/grpcurl
export PATH=$PATH:/home/e416232/minikube
export PATH=$PATH:/disk01/e416232/projects/scripts/utilities

export TERM=xterm-color
export CLICOLOR=1

source <(kubectl completion bash)
# Aliases
if [ -e $HOME/.bash_aliases ]; then
    source $HOME/.bash_aliases
fi

# Shell Customization
#PS1="[$GREEN\u$RESET @ $YELLOW$(get_image_name)$RESET] ($CYAN$(get_cwd)$RESET) \n\$ \t\$(parse_git_branch) λ "
PS1="[$GREEN\u$RESET @ $YELLOW$(get_image_name)$RESET] ($CYAN\w$RESET) \n\$ \t\$(parse_git_branch) λ "

